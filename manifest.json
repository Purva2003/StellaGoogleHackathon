{
    "manifest_version": 3,
    "name": "Stella AI Assistant",
    "version": "1.0.0",
    "description": "AI-powered study assistant using Google Gemini.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "sidePanel",
      "contextMenus",
      "activeTab",
      "storage" 
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "background": {
      "service_worker": "src/background/service-worker.ts"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_title": "Open Stella"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/content/selection-handler.ts"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["stella-logo.png"],
        "matches": ["<all_urls>"]
      }
    ]
  }